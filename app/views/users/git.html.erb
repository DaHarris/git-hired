<div class="container">
  <div class="row">
    <div class="medium-4 columns">
      <div class="profilepic">
        <%= image_tag(@user.picture_url, width: "300") %>
      </div>
      <div class="text-center">
        <h3><%= best_in_place @user, :name %></h3>
        <hr>
      </div>
      <div class="text-center">
        <p><%= best_in_place @user, :description, :as => :textarea %></p>
      </div>

      <%= render 'project_form' %>

    </div>

    <div class="medium-8 columns">
      <div class="panel expgit">
        <%= render 'github_form' %>
      </div>
    </div>
  </div>
</div>

<div class="arrowleft">
  <%= link_to image_tag("/resume-and-arrow.png"), user_path(@user) %>
</div>
