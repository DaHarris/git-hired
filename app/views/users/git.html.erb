<div class="user_git_image">
  <div class="container">
    <div class="row git">
      <div class="medium-4 columns">
        <div class="profilepic">
          <%= image_tag(@user.avatar, width: "300") %>
        </div>
        <div class="text-center">
          <div class="nameheader"><h2><strong><%= best_in_place @user, :name %></strong></h2></div>
          <hr>
        </div>
        <div class="text-center">
          <p><%= best_in_place @user, :description, :as => :textarea %></p>
        </div>

          <%= render 'project_form' %>

      </div>

      <div class="medium-8 columns">
        <div class="panel expgit">
          <%= render 'github_form' %>
        </div>
      </div>
    </div>
  </div>

  <div class="arrowleft">
    <%= link_to image_tag("/resume-and-arrow.png"), user_path(@user) %>
  </div>
</div>
