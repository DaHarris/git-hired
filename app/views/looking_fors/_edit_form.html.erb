<div class="text-center">
  <h4>What are you looking for in a job?</h4>
</div>
<%= form_tag(update_lookings_path(user, lf_id), method: :patch) do %>
  <%= label_tag 'Qualities:' %>
  <%= text_area_tag :quality, nil, placeholder: qual %>
  <br>
  <%= label_tag 'Locations:' %>
  <%= text_area_tag :location, nil, placeholder: loc %>
  <br>
  <%= label_tag "What languages do you know?" %>
  <%= text_area_tag :language, nil, placeholder: lang %>
  <br>
  <%= submit_tag "Save Changes", class: "button" %>
<% end %>
